<!DOCTYPE html>
<html>
  <head>
    <title>Chapter List</title>
    <!-- Include Tailwind CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
    />
    <!-- Meta tag for CSRF token -->
    <meta name="csrf-token" content="<%= csrfToken %>" />
  </head>
  <body class="bg-gray-100">
    <!-- Navigation bar -->
    <div class="navbar bg-gray-900 text-white p-4 mb-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center">
          <div class="navbar-logo">
            <!-- Logo image -->
            <img
              src="https://img.freepik.com/free-vector/school-education-logo-template_23-2149713051.jpg?w=740&t=st=1707238791~exp=1707239391~hmac=47a76b893ed86a6fb26db168c3d474bf17a29d0e1cd67bdd578f6b82f25f05cb"
              alt="Logo"
              class="max-h-10"
            />
          </div>
        </div>
        <div class="flex space-x-8">
          <!-- Navigation links -->
          <a href="/show" class="text-white">Home</a>
          <a href="/about" class="text-white">About</a>
          <a href="/contact" class="text-white">Contact</a>
          <a href="/mycourse" class="text-white">Mycourselist</a>
        </div>
      </div>
    </div>
    <!-- Heading -->
    <h1 class="text-3xl font-bold text-center my-6">Chapters</h1>
    <!-- Table to display chapters -->
    <table class="table-auto w-full bg-white rounded-lg shadow-lg p-4">
      <thead>
        <tr class="bg-gray-200">
          <!-- Table headers -->
          <th class="px-4 py-2">Chapter ID</th>
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Description</th>
        </tr>
      </thead>
      <tbody>
        <!-- Loop through chapters to populate table rows -->
        <% let i=0; chapters.forEach(function(chapter, index) {i++ %>
        <tr
          class="<%= index % 2 === 0 ? 'bg-gray-100' : 'bg-gray-200' %> hover:bg-gray-300"
        >
          <!-- Chapter ID -->
          <td class="px-4 py-2"><%= i %></td>
          <!-- Chapter Title with a link to admin page -->
          <td class="px-4 py-2">
            <a href="/adminpage/<%= chapter.id %>">
              <div
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded"
              >
                <%= chapter.title %>
              </div>
            </a>
          </td>
          <!-- Chapter Description -->
          <td class="px-4 py-2"><%= chapter.description %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>

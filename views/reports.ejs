<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Document Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSRF Token -->
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <!-- Tailwind CSS via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Title: Student Course List -->
    <title>Student Course List</title>
  </head>
  <body>
    <!-- Main Content -->
    <div class="min-h-screen bg-gray-100 p-8">
      <div class="max-w-screen-xl mx-auto">
        <!-- Page Header -->
        <div class="mt-8">
          <div class="text-3xl font-bold mb-4 text-center text-indigo-700">
            Student Course List
          </div>
        </div>
        <!-- Course Cards -->
        <div class="flex flex-grow flex-wrap -mx-4">
          <% for (let course of courses) { %>
          <div class="w-full md:w-1/2 lg:w-1/3 p-4">
            <div
              class="p-6 bg-blue-300 text-gray-800 rounded-lg shadow-md hover:bg-indigo-300 transition duration-300 ease-in-out transform hover:scale-105"
            >
              <!-- Course Title -->
              <div class="text-xl font-bold mb-2"><%= course.title %></div>
              <!-- Enrollment Count -->
              <% let enrollCount = 0; for (let enrollment of enrollments) { %>
              <% if (course.id === enrollment.courseId) { enrollCount++ %> <% }
              %> <% } %>
              <h1 class="text-xl font-semibold mb-2">
                Enrolled Students: <%= enrollCount %>
              </h1>
              <!-- View Progress Button -->
              <a
                href="/progress/<%= course.id %>"
                class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded"
              >
                View Progress
              </a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>

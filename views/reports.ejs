<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Set document metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSRF Token for security -->
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <!-- Include Tailwind CSS via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Title of the page -->
    <title>Course List</title>
  </head>

  <body>
    <!-- Main content section -->
    <div class="min-h-screen bg-gray-100 p-8">
      <div class="max-w-screen-xl mx-auto">
        <!-- Header for course list -->
        <div class="mt-8">
          <div class="text-3xl font-bold mb-4 text-center text-indigo-700">
            My Course List
          </div>
        </div>
        <!-- Displaying course cards -->
        <div class="flex flex-grow flex-wrap -mx-4">
          <!-- Loop through each course -->
          <% for (let pack of packs) { %>
          <div class="w-full md:w-1/2 lg:w-1/3 p-4">
            <div
              class="p-6 bg-blue-300 text-gray-800 rounded-lg shadow-md hover:bg-indigo-300 transition duration-300 ease-in-out transform hover:scale-105"
            >
              <!-- Display course heading -->
              <div class="text-xl font-bold mb-2"><%= pack.heading %></div>
              <!-- Count the number of enrolled students -->
              <% let i=0; for (let enroll of enrolls) { %> <% if
              (pack.id==enroll.courseId) { i++ %> <% } %> <% } %>
              <h1 class="text-xl font-semibold mb-2">
                No of enrolled students: <%= i %>
              </h1>
              <!-- Link to view course progress -->
              <a
                href="/progress/<%= pack.id %>"
                class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded"
              >
                View
              </a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>

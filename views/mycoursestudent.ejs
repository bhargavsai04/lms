<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Document metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <!-- Include Tailwind CSS via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha384-pzjw4NxyA7ADLlZ0f/DS83I5O7jsDePsC3nmQJw4rISwMx6fe7T9CjQyC9dFO2F21"
      crossorigin="anonymous"
    />
    <script>
      // Script for filtering course list
      document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.querySelector("[data-search]");
        const courses = document.querySelectorAll("[data-course]");

        searchInput.addEventListener("input", (e) => {
          const value = e.target.value.toLowerCase();

          courses.forEach((course) => {
            const isVisible = course.textContent.toLowerCase().includes(value);
            course.style.display = isVisible ? "block" : "none";
          });
        });
      });
    </script>
    <!-- Title -->
    <title>Enrolled Courses</title>
  </head>

  <body>
    <!-- Navigation Bar -->
    <div class="min-h-screen bg-gray-100 p-8">
      <div class="navbar bg-gray-900 text-white p-4 mb-4">
        <div class="container mx-auto flex justify-between items-center">
          <div class="flex items-center">
            <!-- Logo and Search Bar -->
            <div class="navbar-logo">
              <img
                src="https://img.freepik.com/free-vector/school-education-logo-template_23-2149713051.jpg?w=740&t=st=1707238791~exp=1707239391~hmac=47a76b893ed86a6fb26db168c3d474bf17a29d0e1cd67bdd578f6b82f25f05cb"
                alt="Logo"
                class="max-h-10"
              />
            </div>
            <div class="relative flex items-center">
              <i class="fas fa-search text-gray-700 mr-2"></i>
              <input
                type="search"
                placeholder="Search"
                class="w-96 pl-10 pr-4 py-2 rounded-full bg-white text-gray-700 focus:outline-none border border-green-600 shadow-2xl transition-transform duration-300 transform scale-100 hover:scale-105"
                data-search
              />
            </div>
          </div>
          <!-- Navigation Links -->
          <div class="flex space-x-8">
            <a href="/show" class="text-white">Home</a>
            <a href="/about" class="text-white">About</a>
            <a href="/contact" class="text-white">Contact</a>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="max-w-screen-xl mx-auto">
        <!-- Header -->
        <div class="mt-8">
          <div class="text-3xl font-bold mb-4 text-center text-indigo-700">
            List of Enrolled Courses
          </div>
        </div>

        <!-- Course Cards -->
        <div class="flex flex-grow flex-wrap -mx-4">
          <% for (let course of courses) { %> <% for (let enrollment of
          enrollments) { %> <% if (course.id == enrollment.courseId) { %>
          <div class="w-full md:w-1/2 lg:w-1/3 p-4" data-course>
            <div
              class="p-6 bg-green-300 text-gray-800 rounded-lg shadow-md hover:bg-indigo-300 transition duration-300 ease-in-out transform hover:scale-105"
            >
              <div class="text-xl font-bold mb-2">
                <%= course.heading %>

                <a
                  href="/viewcourse?courseId=<%= course.id %>"
                  class="action-link bg-green-500 text-white font-semibold px-4 py-2 rounded-lg mb-2 hover:bg-green-800 transition duration-300 ease-in-out inline-block"
                  >Learn</a
                >
                <a
                  href="/myprogress?courseId=<%= course.id %>"
                  class="action-link bg-green-500 text-white font-semibold px-4 py-2 rounded-lg mb-2 hover:bg-green-800 transition duration-300 ease-in-out inline-block"
                  >My Progress</a
                >
              </div>

              <ul>
                <!-- Author Details -->
                <% for (let user of users) { %> <% if (user.id == course.userId)
                { %>
                <h1 class="text-xl font-semibold mb-2">
                  Author: <%= user.firstName %>
                </h1>
                <% } %> <% } %>
              </ul>

              <% let count = 0; %> <% for (let enrollment of enrollments) { %>
              <% if (course.id == enrollment.courseId) { %> <% count++; %> <% }
              %> <% } %>

              <!-- Number of Enrolled Students -->
              <h1 class="text-xl font-semibold mb-2">
                <i class="fas fa-user-graduate"></i> Enrolled Students: <%=
                count %>
              </h1>
            </div>
          </div>
          <% } %> <% } %> <% } %>
        </div>
      </div>
    </div>
  </body>
</html>

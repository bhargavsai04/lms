<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Define the document title -->
    <title>Create New Course</title>
    <!-- Include Tailwind CSS library for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- CSRF token for security -->
    <meta name="csrf-token" content="<%= csrfToken %>" />
  </head>
  <body class="bg-gray-100 flex flex-col min-h-screen">
    <!-- Navigation Bar -->
    <div class="flex-grow flex items-center justify-center relative">
      <!-- Navigation links -->
      <div class="absolute top-6 left-6 space-x-4">
        <!-- Home link -->
        <a href="/show" class="p-4 text-gray-800 bg-white rounded shadow-md"
          >Home<span class="ml-2 text-blue-500">&#8594;</span></a
        >
        <!-- Create New Course link -->
        <a href="" class="p-4 text-gray-800 bg-white rounded shadow-md"
          >Create New Course<span class="ml-2 text-blue-500">&#8594;</span></a
        >
      </div>
      <!-- Form for adding a new course -->
      <div class="bg-white p-8 rounded shadow-md w-1/3 mx-auto">
        <!-- Title -->
        <h1 class="text-2xl text-gray-800 mb-6">Add New Course</h1>
        <!-- Course creation form -->
        <form action="/course" method="post">
          <!-- CSRF token -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <!-- Course name input -->
          <input
            type="text"
            name="heading"
            placeholder="Enter course name"
            class="w-full p-2 mb-4 rounded border border-gray-300"
            required
          />
          <!-- Submit button -->
          <button
            type="submit"
            class="bg-blue-500 text-white p-2 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-green-500"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
